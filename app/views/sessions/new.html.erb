<% if flash[:alert] %>
  <div class="alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="form-container">
  <div class="form-content">
    <h1>Login</h1>
    <%= form_with url: login_path, method: :post, class: "login-form" do |f| %>
      <div class="form-group">
        <%= label_tag :email, "Email", class: "form-label" %>
        <%= email_field_tag :email, nil, class: "form-input", placeholder: "Enter your email" %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Password", class: "form-label" %>
        <%= password_field_tag :password, nil, class: "form-input", placeholder: "Enter your password" %>
      </div>
      <div class="form-actions">
        <%= submit_tag "Login", class: "form-button" %>
      </div>
      <p class="form-footer">
        Don't have an account? <%= link_to "Sign Up", register_path %>
      </p>
    <% end %>
  </div>
</div>
