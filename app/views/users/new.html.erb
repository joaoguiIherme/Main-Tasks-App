<h1>Registrar</h1>

<% if flash[:alert] %>
  <div class="alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="form-container">
  <div class="form-content">
    <h1>Sign Up</h1>
    <%= form_with url: register_path, method: :post, class: "login-form" do |f| %>
      <div class="form-group">
        <%= label_tag :name, "Name", class: "form-label" %>
        <%= text_field_tag :name, nil, class: "form-input", placeholder: "Enter your name" %>
      </div>
      <div class="form-group">
        <%= label_tag :email, "Email", class: "form-label" %>
        <%= email_field_tag :email, nil, class: "form-input", placeholder: "Enter your email" %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Password", class: "form-label" %>
        <%= password_field_tag :password, nil, class: "form-input", placeholder: "Enter your password" %>
      </div>
      <div class="form-group">
        <%= label_tag :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= password_field_tag :password_confirmation, nil, class: "form-input", placeholder: "Confirm your password" %>
      </div>
      <div class="form-actions">
        <%= submit_tag "Register", class: "form-button" %>
      </div>
      <p class="form-footer">
        Already have an account? <%= link_to "Login", login_path %>
      </p>
    <% end %>
  </div>
</div>

